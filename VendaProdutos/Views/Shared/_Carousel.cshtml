    @* bg_topo bg_topo_banner *@


     
    <div class="container-fluid baner_principal" style="max-width:1900px;overflow: hidden;">
        <div class="row">
            <div class="col-12 col_0_xl">
                <div class="swiper-container bannerSite">
                    <div class="swiper-wrapper">

                        <div class="swiper-slide">
                            <img src="~/img/temporario/banner1.png" />
                        </div>
                        <div class="swiper-slide">
                            <img src="~/img/temporario/banner2.png" />
                        </div>
                        <div class="swiper-slide">
                            <img src="~/img/temporario/banner4.png" />
                        </div>
                        <div class="swiper-slide">
                            <img src="~/img/temporario/banner3.png" />
                        </div>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
















    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>



    <script>
        //stilo app
        var swiper = new Swiper(".bannerSite", {
            freeMode: true,
            loop: true,
            centeredSlides: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            autoplay: {
                delay: 2000,
            },
            breakpoints: {
                0: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                },
                360: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                },
                411: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                },
                640: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                },
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 20,
                },
            },
        });
    </script>
 