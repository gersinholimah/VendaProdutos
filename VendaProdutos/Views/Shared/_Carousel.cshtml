<script>
    // Função para configurar o Swiper
    function configurarSwiper() {
        var swiper = new Swiper(".bannerSite", {

            centeredSlides: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            autoplay: {
                delay: 2000,
            },
            breakpoints: {
                0: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                    freeMode: true,
                    loop: true,
                },
                360: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                    freeMode: true,
                    loop: true,
                },
                411: {
                    slidesPerView: 1.2,
                    spaceBetween: 10,
                    freeMode: true,
                    loop: true,
                },
                640: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                    freeMode: true,
                    loop: true,
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                    freeMode: true,
                    loop: true,
                },
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 20,
                },
            },
            on: {
                slideChange: function () {
                    // Obtém a imagem ativa no momento
                    var imagemAtiva = this.slides[this.activeIndex].querySelector('img');
                    if (imagemAtiva) {
                        // Aguarda a imagem ser carregada completamente
                        imagemAtiva.onload = function () {
                            obterAlturaLargura(imagemAtiva);
                        };
                    }
                }
            }
        });
    }

    // Função para obter altura e largura da imagem
    function obterAlturaLargura(imagem) {
        // Obter altura e largura renderizadas da imagem
        var alturaRenderizada = imagem.clientHeight;
        var larguraRenderizada = imagem.clientWidth;

        // Adicionar os atributos height e width à imagem
        imagem.setAttribute('height', alturaRenderizada);
        imagem.setAttribute('width', larguraRenderizada);

        console.log('Altura renderizada: ' + alturaRenderizada + ' pixels');
        console.log('Largura renderizada: ' + larguraRenderizada + ' pixels');
    }

    // Aguarda o carregamento completo da página
    document.addEventListener("DOMContentLoaded", function () {
        configurarSwiper();
    });
</script>