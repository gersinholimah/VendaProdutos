<title>
    @ViewData["Title"] - Grafico de Vendas
</title>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<div class="form-group">
    <label for="pagamentoFilter">Filtrar por Pagamento:</label>
    <select id="pagamentoFilter" class="form-control">
        <option value="true">Sem Pagamento</option>
        <option value="false">Com Pagamento</option>
    </select>
</div>

<button onclick="CarregaDados()" class="btn btn-primary">Atualizar Gráfico</button>


<div id="chart_div" style="width: 900px; height: 500px;"></div>

<script type="text/javascript">
    google.charts.load('current', { packages: ['corechart', 'bar'] });
    google.charts.setOnLoadCallback(CarregaDados);

    function CarregaDados() {
        var incluirPagamento = $("#pagamentoFilter").val() === "true";

        $.ajax({
            url: '@Url.Action("VendasProdutos", "AdminGrafico")',
            data: { dias: 7, incluirPagamento: incluirPagamento },
            dataType: "json",
            type: "GET",
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function (data) {
                GraficoVendasProdutos(data);
                return false;
            }
        });
        return false;
    }
    //preparar os dados obtidos
    function GraficoVendasProdutos(data) {
        var dataArray = [
            ['Produto', 'Quantidade', 'Valores(R$)']
        ];

        $.each(data, function (i, item) {
            dataArray.push([item.produtoNome, item.produtosQuantidade, item.produtosValorTotal]);
        });

        var data = google.visualization.arrayToDataTable(dataArray);

        var options = {
            title: 'Produtos - Vendas : últimos 7 dias',

            curveType: 'function',
            legend: { position: 'bottom' },

            chartArea: {
                width: '70%'
            },
            colors: ['#5202b5', '#d2a828'],
            hAxis: {
                title: 'Produtos',
                minValue: 0
            },
            vAxis: {
                title: 'Valor Total (em Reais)'
            }
        };
    
        var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
        chart.draw(data, options);
    }

</script>