@model IEnumerable<VendaProdutos.Models.Pedido>

    <div class="container">
        <div class="row">
            <div class="col-12">

<h2>Pedidos Por Período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>


                            <div class="form-group">
                                <label for="pagamentoPedido">Pedido Pago </label>
                                <select class="form-control" name="pagamentoPedido">
                                    <option value="">Todos</option>
                                    <option value="true">Sim</option>
                                    <option value="false">Não</option>
                                </select>
                            </div>

            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos Pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
        <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj => obj.TotalPedido).ToString("c")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeComprador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WhatsappComprador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalItensPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeComprador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WhatsappComprador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalItensPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

        </div>
    </div>
</div>